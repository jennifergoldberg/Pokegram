<!DOCTYPE html>
<html lang="en">

<!-- Head Partial -->
<%- include("partials/_head.ejs") %>

  <body>
    <!-- Nav Partial -->
    <%- include("partials/_nav.ejs") %>


      <div class="container mt-3">
        <div class="card">
          <div class="card-header" style="font-family: 'Press Start 2P';">
            Edit Post!
          </div>

          <div class="card-body">
            <form action="/posts/<%=post.id %>?_method=PUT" method="POST">
              <div class="mb-3">
                <legend><strong>User Information</strong></legend>
                <label for="post-username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" id="username" value="<%= post.username %> "
                  maxlength="20">
              </div>

              <% const avatars=[ { name: "abra" , src: "/assets/_abra.png" }, { name: "bellsprout", src: "/assets/_bellsprout.png" }, { name: "bulbasaur" , src: "/assets/_bulbasaur.png" }, { name: "caterpie", src: "/assets/_caterpie.png" }, { name: "charmander", src: "/assets/_charmander.png" }, { name: "dratini" , src: "/assets/_dratini.png" }, { name: "eevee" , src: "/assets/_eevee.png" }, {name: "jigglypuff" , src: "/assets/_jigglypuff.png" }, {name: "mankey" , src: "/assets/_mankey.png" }, {name: "meowth" , src: "/assets/_meowth.png" }, {name: "mew" , src: "/assets/_mew.png" }, {name: "pidgey" , src: "/assets/_pidgey.png" }, {name: "pikachu" , src: "/assets/_pikachu.png" }, {name: "psyduck" , src: "/assets/_psyduck.png" }, {name: "rattata" , src: "/assets/_rattata.png" }, {name: "snorlax" , src: "/assets/_snorlax.png" }, {name: "squirtle" , src: "/assets/_squirtle.png" }, {name: "venonat" , src: "/assets/_venonat.png" }, {name: "weedle" , src: "/assets/_weedle.png" }, {name: "zubat" , src: "/assets/_zubat.png" },] %>
              <div class="mb-3">
                <label for="validationCustomUsername" class="form-label">Avatar</label>
                <select name="avatar" for="user-avatar" class="form-select" aria-label="Default select example">
                  <option selected>choose an avatar</option>
                  <% avatars.forEach(avatar=> { %>
                    <option value="<%= avatar.src %>">
                      <%= avatar.name %>
                    </option>
                    <% }) %>
                </select>
              </div>

              <div class="mb-3">
                <legend><strong>Post Information</strong></legend>
                <label for="post-image" class="form-label">Post Image</label>
                <input type="text" class="form-control" name="image" id="post-image" value="<%= post.image %> ">
              </div>

              <div class="mb-3">
                <label for="post-text" class="form-label">Comment</label>
                <input class="form-control" name="text" id="post-text" cols="30" rows="10"
                  placeholder="<%= post.text %> " value="<%= post.text %>" maxlength="144">
              </div>

              <button type="submit" class="btn btn-primary mx-auto mb-3" style="font-family: 'Press Start 2P';">Update Post!</button>
            </form>
          </div>
        </div>
      </div>
  </body>

</html>