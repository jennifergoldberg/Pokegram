<!DOCTYPE html>
<html lang="en">

<!-- Head Partial -->
<%- include("partials/_head.ejs") %>

<body>
<section>
  <!-- Nav Partial -->
  <%- include("partials/_nav.ejs") %> 
</section>
<% post.slice().reverse().forEach(allPosts => { %>
  <section>
    <div class="card mx-auto" style="width: 30rem;">
      <section class="top, d-flex">
        <img class="post-avatar" src="/assets/_pikachu.png" alt="avatar" height="30px">
        <h5 class="post-user"><%= allPosts.username %></h5>
        <svg viewBox="0 0 100 80" width="40" height="40">
          <rect width="100" height="20"></rect>
          <rect y="30" width="100" height="20"></rect>
          <rect y="60" width="100" height="20"></rect>
        </svg>
      </section>
      <img class="card-img-top" src="<%= allPosts.image %>">
      
      <div class="card-body">
        <section class="post-text, d-flex">
          <img class="post-like" src="/assets/_heart-static.png" alt="avatar" height="30px">
          <p><%= allPosts.text %></p>
        </section>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Cras justo odio</li>
          <li class="list-group-item">Dapibus ac facilisis in</li>
          <li class="list-group-item">Vestibulum at eros</li>
        </ul>
        <a href="/posts/<%= allPosts._id%> " class="btn btn-primary">Comment on this post</a>
      </div>
    </div>
    </section>
<% });%>

</body>


</html>

